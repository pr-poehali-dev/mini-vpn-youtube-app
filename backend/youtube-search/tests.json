{
  "tests": [
    {
      "name": "Search returns video results",
      "method": "GET",
      "path": "/?q=react tutorial&maxResults=5",
      "expectedStatus": 200,
      "expectedBody": {
        "videos": "array",
        "total": "number"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing query returns error",
      "method": "GET",
      "path": "/",
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Search query is required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "OPTIONS request returns CORS headers",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    }
  ]
}
